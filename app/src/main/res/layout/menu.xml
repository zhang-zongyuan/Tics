<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:background="#eee"
        android:gravity="center"
        android:src="@drawable/ic_baseline_camera_alt_24" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/profile_pic"
        android:text="TextView" />

    <Button
        android:id="@+id/classbtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/profile_pic"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#40adbdfa"
        android:text="Class"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/studentbtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/classbtn"
        android:layout_marginTop="0.5px"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#40adbdfa"
        android:text="students"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/medicalhistbtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/studentbtn"
        android:layout_marginTop="0.5px"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#40adbdfa"
        android:text="Medical history"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/gamebtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/medicalhistbtn"
        android:layout_marginTop="0.5px"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#40adbdfa"
        android:text="Game progression"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/sign_outbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#40adbdfa"
        android:text="Sign out"
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>