<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/arrow"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="go_class"/>

 <TextView
     android:id="@+id/student"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Students"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="125dp"
     android:textSize="30dp"
     />

    <TextView
        android:id="@+id/stdname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:layout_below="@id/student"
        />
    <TextView
        android:id="@+id/parent_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parent_info"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_below="@id/stdname"
        />
    <TextView
        android:id="@+id/tic_count"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="num of tics"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@id/parent_info"
        />

    <TableLayout
        android:layout_below="@id/tic_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TableRow
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Start Time"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="End Time"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Tics"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="time1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="time2"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Tic num"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="time1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="time2"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Tic num"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>